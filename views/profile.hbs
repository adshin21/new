<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/settings.png');object-fit: contain;">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>User Profile</h1>
                    <span class="subheading">Update Your Settings</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            {{#if errors}}
            <ul class="list-group">
                {{#each errors}}
                <li class="list-group-item text-danger">{{this}}</li>
                {{/each}}
            </ul>
            {{/if}}
            <form action="/profile/store" method="POST" enctype="multipart/form-data">

                {{!-- <div>
                    <img id="output" name="profilepic" src="/img/default.jpg"
                        style="height:300px;width:300px;display:block;margin-left:auto;margin-right:auto"/>
                    <br>
                    <label for="file-input"><img src="/img/Upload.jpg" alt="Upload Your Profile"
                            style="display:block;margin-left:59px"/></label>
                    <input type="file" accept="image/*" onchange="loadFile(event)" id="file-input"
                        style="display:none;margin-left: auto;margin-right: auto;">
                </div> --}}

                {{#if data.img}}
                <img src="{{data.img}}" alt="Update Your Profile Picture"
                    style="height:300px;width:300px;display:block;margin-left:auto;margin-right:auto" />
                <br>
                {{/if}}

                {{#unless data.img}}
                <img src="/img/default.jpg" alt="Upload Your Profile Picture"
                    style="height:300px;width:300px;display:block;margin-left:auto;margin-right:auto" />
                {{/unless}}
                <br>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Image</label>
                        <input type="file" class="form-control-file" name="profilepic" id="img"
                            placeholder="Upload Your Profile Picture" style="margin-left:auto;margin-right:auto">
                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Name</label>
                        <input type="text" name="name" placeholder="FullName" value="{{data.name}}"
                            class="form-control">
                    </div>
                </div>


                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Organization</label>
                        <input type="text" name="organization" placeholder="Organization" value="{{data.org}}"
                            class="form-control">
                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Date of Birth</label>
                        <input type="text" name="dob" placeholder="Format: YYYY-MM-DD" value="{{data.dob}}"
                            class="form-control">

                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Contact Number</label>
                        <input type="text" name="phone" placeholder="Contact with Area Code" value="{{data.mobile}}"
                            class="form-control">

                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Resume</label>
                        <input type="text" name="resume" placeholder="Link to Resume" value="{{data.resume}}"
                            class="form-control">
                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Address</label>
                        <input type="text" name="address" placeholder="Address" value="{{data.address}}"
                            class="form-control">
                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>ZipCode</label>
                        <input type="text" name="ZipCode" placeholder="ZipCode" value="{{data.ZipCode}}"
                            class="form-control">
                    </div>
                </div>

                <div class="form-group my-4 text-center">
                    <button class="btn btn-primary">Update Profile</button>
                </div>

            </form>
        </div>
    </div>
</div>