<!-- Page Header -->
<header class="masthead" style="background-image: url('/img/settings.png');object-fit: contain;" >
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="page-heading">
                    <h1>User Profile</h1>
                    <span class="subheading">Update Your Settings</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            {{#if errors}}
                <ul class="list-group">
                    {{#each errors}}
                        <li class="list-group-item text-danger">{{this}}</li>
                    {{/each}}
                </ul>
            {{/if}}
            <form action="/profile/store" method="POST">
                
                <div class="profile-card">
                    <div class="image-container">
                        <img src="/posts/image-1561647631608.jpg" alt="Upload Your Picture" style="width:200px,margin: auto">
                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Name</label>
                        <input type="text" name="name" placeholder="FullName"  value="{{data.name}}" class="form-control">
                    </div>
                </div>


                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Organization</label>
                        <input type="text" name="organization" placeholder="Organization" value="{{data.org}}" class="form-control">
                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Date of Birth</label>
                        <input type="text" name="dob" placeholder="Format: YYYY-MM-DD" value="{{data.dob}}" class="form-control">

                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Contact Number</label>
                        <input type="text" name="phone" placeholder="Contact with Area Code" value="{{data.mobile}}" class="form-control">

                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Resume</label>
                        <input type="text" name="resume" placeholder="Link to Resume" value="{{data.resume}}" class="form-control">
                    </div>
                </div>

                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>Address</label>
                        <input type="text" name="address" placeholder="Address" value="{{data.address}}" class="form-control">
                    </div>
                </div>
                
                <div class="control-group">
                    <div class="form-group floating-label-form-group controls">
                        <label>ZipCode</label>
                        <input type="text" name="ZipCode" placeholder="ZipCode" value="{{data.ZipCode}}" class="form-control">
                    </div>
                </div>
                
                <div class="form-group my-4 text-center">
                    <button class="btn btn-primary">Update Profile</button>
                </div>
                
            </form>
        </div>
    </div>
</div>